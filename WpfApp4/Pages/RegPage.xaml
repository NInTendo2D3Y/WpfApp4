<Page x:Class="WpfApp4.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="320">
            <Label>Электронная почта</Label>
            <TextBox Text="{Binding Email}"></TextBox>
            <Label>Имя</Label>
            <TextBox Text="{Binding Name}"></TextBox>
            <Label>Пороль</Label>
            <TextBox Text="{Binding Password}"></TextBox>
            <Button Click="Reg" Margin="5">Зарегистрироваться</Button>
            <Button Click="GoReg">Войти</Button>
        </StackPanel>
    </Grid>
</Page>

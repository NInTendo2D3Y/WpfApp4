<Page x:Class="WpfApp4.Pages.Author"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Author">

    <Grid>
        <StackPanel Width="320" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label> Электронная почта</Label>
            <TextBox x:Name="tbLogin"></TextBox>
            <Label> </Label>
            <PasswordBox x:Name="pbPassword"></PasswordBox>
            <Button Click="Authoris" Margin="5">Авторизоваться</Button>
            
        </StackPanel>
    </Grid>
</Page>
